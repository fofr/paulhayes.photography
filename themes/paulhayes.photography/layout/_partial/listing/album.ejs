<li class="listing-album-item">
  <div class="listing-album-cover">
    <a href="<%- config.root %><%- post.path %>" class="listing-album-cover-link" style="background-image: url('<%= post.albumImage %>')">
      <h2 class="listing-album-title">
        <%- post.title.replace(/\s(\w*)$/, '&nbsp;$1') %>
      </h2>
    </a>
  </div>
</li>
