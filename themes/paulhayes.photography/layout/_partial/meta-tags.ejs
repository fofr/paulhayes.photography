<%
  first_photo = null;
  site.posts.sort('date', 1).each(function(latestPost, i){
    if (latestPost.exif) {
      first_photo = latestPost;
    }
  });
%>
<meta content="website" property="og:type" />
<meta content="<%= config.url %>" property="og:url" />
<meta content="Paul Hayes Photography" property="og:title" />
<meta content="Brighton and Sussex Landscape Photographer" property="og:description" />
<% if (first_photo) { %><meta content="<%= first_photo.file %>" property="og:image" /><% } %>
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@phayesphoto" />
<meta name="twitter:title" content="Paul Hayes Photography" />
<meta name="twitter:description" content="Sussex based nature photographer" />
<% if (first_photo) { %><meta name="twitter:image" content="<%= first_photo.twitterImage %>" /><% } %>
<meta name="twitter:url" content="<%= config.url %>" />
