<figure class="album-photo<% if (modifier) { %> album-photo-<%= modifier %><% } %>">
  <div class="photo-image-wrapper">
    <a href="<%- config.root %><%- post.path %>">
      <img src="<%= post.albumImage %>" alt="<%= post.title %>" class="photo-image" />
    </a>
  </div>
  <figcaption>
    <div class="photo-meta">
      <h3>
        <a href="<%- config.root %><%- post.path %>">
          <%= post.title %>
        </a>
      </h3>
      <%- caption %>
      <%- partial('_partial/photo/exif', {photo: post}) %>
    </div>
  </figcaption>
</figure>
