<%
  photo = post;
  photo.filename = photo.filename || photo.slug;
  photo.file = config.image_dir + 'square/380/' + photo.filename + '.' + (photo.type ? photo.type : 'jpg');
%>
<li class="listing-item">
  <a href="<%- config.root %><%- post.path %>" class="listing-image-link" style="background-image: url('<%= photo.file %>')">
    <img src="<%= photo.file %>" alt="<%= post.title %>" class="listing-image" />
  </a>
</li>
