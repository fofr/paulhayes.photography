<%
  photo = page;
%>
<main role="main">
  <article class="container single-photo clearfix" id="photo">
    <header class="article-header">
      <h1 class="main-content-title photo-title">
        <%= photo.title %>
      </h1>
    </header>
    <div class="photo-image-wrapper photo-beyond-margins <% if (photo.orientation) { %>photo-orientation-<%= photo.orientation %><% } %>">
      <img src="<%= photo.image %>" class="photo-image" alt="<%= photo.title %>" />
      <img src="/images/logo-white.svg" class="watermark-logo" alt="Paul Hayes Photography logo"/>
      <%- partial('_partial/post/nav', {post: photo}) %>
    </div>
    <div class="article-content photo-content">
      <%- photo.content %>
    </div>
    <div class="photo-meta">
      <h2 class="photo-meta-heading">Buy prints</h2>

      <table class="table">
        <thead>
          <tr>
            <th>Size</th>
            <th>Cost</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>A3</td>
            <td>Â£50</td>
            <td><a href="#">Purchase</a></td>
          </tr>
        </tbody>
      </table>

      <p>
        <a href="/contact?prints">Order prints</a>
        <% if (!photo.licence_message) { %>
          <br /><a href="/contact?licences">Licence photo</a>
        <% } else { %>
          <br /><%= photo.licence_message %>
        <% } %>
      </p>
      <%- partial('_partial/photo/external', {photo: photo}) %>
      <% if (false && photo.exif) { %>
        <h2 class="photo-meta-heading">Metadata</h2>
        <%- partial('_partial/photo/exif', {photo: photo}) %>
      <% } %>
      <%- partial('_partial/photo/tags', {photo: photo}) %>
    </div>
  </article>
</main>
